<Page x:Class="Pasteleria_Alemana.GestionarPagoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Pago"
      Background="#FAFAFA">

    <Page.Resources>
        <!-- Estilo del botón de confirmación -->
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#D62B3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="8" BlurRadius="10" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="12">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="692" Height="326">
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <!-- 🔙 Botón Volver -->
        <Button Content="⟵ Volver al carrito"
        FontSize="14"
        Padding="10,5"
        Background="#E5E7EB"
        BorderBrush="#CBD5E1"
        BorderThickness="1"
        Foreground="#1E293B"
        Cursor="Hand"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="10,10,0,0"
        Grid.Column="1"
        Click="BtnAtras_Click" Height="29" Width="137"/>


        <!-- Título -->
        <TextBlock Text="Método de Pago" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#1E293B" Grid.Column="1"/>

        <!-- Botones de pago -->
        <UniformGrid Columns="4" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Column="1" Width="506" Cursor="">
            <!-- Botón Yappy -->
            <Button Tag="yappy" Width="100" Height="120" Margin="10" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="MetodoPago_Click">
                <Grid>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Imagen -->
                            <Image Source="yappy.jpg" Width="60" Height="60" Stretch="Uniform"/>
                            <!-- Texto debajo de la imagen -->
                            <TextBlock Text="Yappy" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Button>

            <!-- Botón Visa -->
            <Button Tag="visa" Width="100" Height="120" Margin="10" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="MetodoPago_Click">
                <Grid>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Imagen -->
                            <Image Source="visa.jpeg" Width="60" Height="60" Stretch="Uniform"/>
                            <!-- Texto debajo de la imagen -->
                            <TextBlock Text="Visa" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Button>

            <!-- Botón ACH -->
            <Button Tag="ach" Width="100" Height="120" Margin="10" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="MetodoPago_Click">
                <Grid>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Imagen -->
                            <Image Source="ach.png" Width="60" Height="60" Stretch="Uniform"/>
                            <!-- Texto debajo de la imagen -->
                            <TextBlock Text="ACH" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Button>

            <!-- Botón Efectivo -->
            <Button Tag="efectivo" Width="100" Height="120" Margin="10" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="MetodoPago_Click">
                <Grid>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Imagen -->
                            <Image Source="efectivo.png" Width="60" Height="60" Stretch="Uniform"/>
                            <!-- Texto debajo de la imagen -->
                            <TextBlock Text="Efectivo" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Button>
        </UniformGrid>

        <!-- Botón de confirmación -->
        <Button x:Name="BtnConfirmar" Content="Siguiente" Click="BtnConfirmar_Click" Style="{StaticResource ConfirmButtonStyle}" Grid.Column="1" Margin="0,260,0,0" VerticalAlignment="Top" />
    </Grid>
</Page>