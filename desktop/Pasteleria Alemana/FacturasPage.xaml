<Page x:Class="Pasteleria_Alemana.FacturasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Facturas"
      Background="#FAFAFA">

    <Page.Resources>
        <!-- 🔺 Encabezado moderno -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- 🔘 Botón moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="12" 
                                BorderThickness="0" 
                                Background="{TemplateBinding Background}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔖 Título -->
        <TextBlock Grid.Row="0"
                   Text="Historial de Facturas"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1E293B"
                   Margin="0,0,0,16"/>

        <!-- 🔎 Barra de búsqueda -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <!-- Caja de búsqueda sin placeholder -->
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Height="32"
                     Padding="8"
                     TextChanged="SearchBox_TextChanged"
                     VerticalContentAlignment="Center"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1"
                     Background="White"/>

            <!-- Botón limpiar -->
            <Button x:Name="BtnClearSearch"
                    Content="❌"
                    Width="40"
                    Height="32"
                    Margin="8,0,0,0"
                    Cursor="Hand"
                    Click="BtnClearSearch_Click"
                    Style="{StaticResource ModernButton}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#D62B3C" Offset="0"/>
                        <GradientStop Color="#B91C1C" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </StackPanel>

        <!-- 📋 DataGrid -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="16"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.08"/>
            </Border.Effect>

            <DataGrid x:Name="FacturasGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      IsSynchronizedWithCurrentItem="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idFactura}" Width="80"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding fechaEmision}" Width="200"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding total}" Width="120"/>
                    <DataGridTextColumn Header="Método de Pago" Binding="{Binding metodo_pago}" Width="150"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding status}" Width="120"/>

                    <!-- Botón Ver Factura -->
                    <DataGridTemplateColumn Header="Acciones" Width="160">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ver Factura"
                                        Width="120"
                                        Height="36"
                                        Cursor="Hand"
                                        Click="VerFactura_Click"
                                        Style="{StaticResource ModernButton}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#D62B3C" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Foreground>White</Button.Foreground>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ⬅️➡️ Paginación -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="BtnPrev"
                    Content="⮜"
                    Width="40" Height="40"
                    Cursor="Hand"
                    Click="BtnPrev_Click"
                    Style="{StaticResource ModernButton}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Foreground>White</Button.Foreground>
            </Button>

            <TextBlock x:Name="TxtPage"
                       Text="Pag 1"
                       VerticalAlignment="Center"
                       Foreground="#1E293B"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="12,0"/>

            <Button x:Name="BtnNext"
                    Content="⮞"
                    Width="40"
                    Height="40"
                    Cursor="Hand"
                    Click="BtnNext_Click"
                    Style="{StaticResource ModernButton}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </StackPanel>
    </Grid>
</Page>
