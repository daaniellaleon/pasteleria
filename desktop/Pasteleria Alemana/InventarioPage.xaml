<Page x:Class="Pasteleria_Alemana.InventarioPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      Title="Inventario"
      Background="#FAFAFA"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- 🔘 Toggle estilo moderno con sombras -->
        <Style x:Key="ToggleButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                CornerRadius="25" 
                                BorderThickness="0" 
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}">
                            <!-- Inicializamos RenderTransform -->
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              TextBlock.FontSize="14" 
                                              TextBlock.FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#D62B3C" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 📋 DataGrid moderno -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFC"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🔺 Encabezado moderno -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0,20,0"/>
        </Style>

        <!-- 🔻 Filas con hover -->
        <Style TargetType="DataGridRow">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border x:Name="DGR_Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="Transparent" 
                                BorderThickness="0" 
                                SnapsToDevicePixels="True">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1"/>
                            </SelectiveScrollingGrid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="DGR_Border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="DGR_Border" Property="Background" Value="#EEF2FF"/>
                                <Setter Property="Foreground" Value="#3730A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Celdas con padding -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0,20,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🔘 Botón moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="12" 
                                BorderThickness="0" 
                                Background="{TemplateBinding Background}">
                            <!-- Inicializamos RenderTransform -->
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔎 BÚSQUEDA -->
        <Border Grid.Row="0" 
                Margin="0,0,0,24" 
                Background="White" 
                CornerRadius="16" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.08"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           FontFamily="Segoe MDL2 Assets" 
                           Text="&#xE721;" 
                           VerticalAlignment="Center" 
                           Margin="0,0,12,0" 
                           Foreground="#64748B" 
                           FontSize="20"/>

                <TextBox x:Name="SearchBox" 
                         Grid.Column="1" 
                         Height="40" 
                         Padding="16,8" 
                         BorderThickness="1"
                         BorderBrush="#E2E8F0"
                         Background="#F8FAFC" 
                         VerticalContentAlignment="Center" 
                         FontSize="14" 
                         TextChanged="SearchBox_TextChanged" 
                         Tag="Buscar insumo o producto…"/>

                <Button Grid.Column="2" 
                        Width="40" 
                        Height="40" 
                        Background="#F1F5F9" 
                        BorderThickness="0" 
                        Margin="12,0,0,0"
                        ToolTip="Limpiar" 
                        Click="BtnClearSearch_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE10A;" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Foreground="#64748B" 
                               FontSize="14"/>
                </Button>
            </Grid>
        </Border>

        <!-- 🔘 TOGGLES -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,32">
            <RadioButton x:Name="BtnInvInsumo" 
                         Content="Insumos" 
                         Width="140" 
                         Height="44" 
                         GroupName="InventarioGroup" 
                         FontWeight="SemiBold" 
                         Style="{StaticResource ToggleButtonStyle}" 
                         IsChecked="True" 
                         Click="BtnInvInsumo_Click"/>
            <RadioButton x:Name="BtnInvProducto" 
                         Content="Productos" 
                         Width="140" 
                         Height="44" 
                         GroupName="InventarioGroup" 
                         FontWeight="SemiBold" 
                         Style="{StaticResource ToggleButtonStyle}" 
                         Margin="16,0,0,0" 
                         Click="BtnInvProducto_Click"/>
        </StackPanel>

        <!-- 📋 TABLAS -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="16" 
                Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.08"/>
            </Border.Effect>

            <Grid>
                <!-- Insumos -->
                <DataGrid x:Name="dgInsumos" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          HeadersVisibility="Column" 
                          Visibility="Visible">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Insumo" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="120"/>
                        <DataGridTextColumn Header="Unidad" Binding="{Binding UnidadMedida}" Width="150"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="200"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Productos -->
                <DataGrid x:Name="dgProductos" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          HeadersVisibility="Column" 
                          IsReadOnly="False" 
                          CellEditEnding="dgProductos_CellEditEnding"
                          Visibility="Collapsed">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Producto" Binding="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <DataGridTextColumn Header="Precio unitario" 
                    Binding="{Binding Precio, StringFormat=F2}" 
                    Width="140"/>

                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Editar" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="36" Height="36"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Editar producto"
                    Click="BtnEditarProducto_Click">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE70F;"  
                           Foreground="#334155"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

        <!-- ➕ AGREGAR -->
        <Button x:Name="BtnAgregar" 
                Grid.Row="3" 
                Content="➕ Agregar Insumo" 
                Width="200" 
                Height="48" 
                Margin="0,32,0,0" 
                FontWeight="SemiBold"
                FontSize="14"
                BorderThickness="0" 
                Cursor="Hand" 
                Click="BtnAgregar_Click"
                Style="{StaticResource ModernButton}">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E293B" Offset="0"/>
                    <GradientStop Color="#334155" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Foreground>White</Button.Foreground>
        </Button>
    </Grid>
</Page>
