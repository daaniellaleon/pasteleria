<Window x:Class="Pasteleria_Alemana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        Title="Pastelería Alemana"
        Height="600" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- 🔲 Fondo difuminado -->
        <Border CornerRadius="30"
                Background="#80000000"
                Margin="20">
            <Border.Effect>
                <BlurEffect Radius="6"/>
            </Border.Effect>
        </Border>

        <!-- 🔲 Contenedor principal -->
        <Border CornerRadius="30"
                Margin="20"
                Background="Transparent"
                ClipToBounds="True">

            <fw:AcrylicPanel TintColor="Gray"
                             TintOpacity="0.3"
                             NoiseOpacity="0.02"
                             Margin="10,0,-10,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- Sidebar -->
                        <ColumnDefinition Width="*"/>
                        <!-- Contenido -->
                    </Grid.ColumnDefinitions>

                    <!-- 📌 Sidebar -->
                    <Border Background="White"
                            CornerRadius="25,0,0,25"
                            Margin="10"
                            ClipToBounds="True"
                            Grid.Column="0">

                        <StackPanel VerticalAlignment="Center" Margin="10">

                            <!-- BOTONES EN EL CENTRO -->
                            <Button Content="Inicio" 
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,15"
                                    Click="BtnInicio_Click"
                                    Width="170" Height="40"/>

                            <Button Content="Inventario" 
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,15"
                                    Click="BtnInventario_Click"
                                    Width="170" Height="40"/>

                            <Button Content="Ver Facturas" 
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,15"
                                    Click="BtnFacturas_Click"
                                    Width="170" Height="40"/>

                            <Button Content="Reportes" 
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Black"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,15"
                                    Click="BtnReportes_Click"
                                    Width="170" Height="40"/>

                            <!-- ICONO DE PERFIL ABAJO -->
                            <Button x:Name="BtnPerfil"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Margin="75,30,0,0"
                                    ToolTip="Perfil"
                                    Click="BtnPerfil_Click">

                                <StackPanel>
                                    <Ellipse Width="20" Height="22" Fill="Black"/>
                                    <Ellipse Width="30" Height="10" Fill="Black" Margin="0,-5,0,0"/>
                                </StackPanel>

                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Logout" Click="Logout_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- 📌 Contenido dinámico -->
                    <Frame x:Name="MainFrame"
                           Grid.Column="1"
                           NavigationUIVisibility="Hidden"
                           Margin="10"/>
                </Grid>
            </fw:AcrylicPanel>
        </Border>

        <!-- 📌 Logo -->
        <Image HorizontalAlignment="Left"
               Height="114"
               Margin="66,48,0,0"
               VerticalAlignment="Top"
               Width="118"
               Source="/logopaste.png"/>
    </Grid>
</Window>
