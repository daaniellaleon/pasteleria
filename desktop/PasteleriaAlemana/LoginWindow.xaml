<Window x:Class="Pasteleria_Alemana.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid Background="#AA000000">
        <!-- Fondo oscuro translúcido -->

        <!-- Panel del login -->
        <Border CornerRadius="20"
                Background="#CC333333"
                BorderBrush="#FFD39E24"
                BorderThickness="2"
                Width="500"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20">

            <!-- Efecto de desenfoque -->
            <Border.Effect>
                <BlurEffect Radius="1"/>
            </Border.Effect>

            <!-- Contenido del login -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="400">

                <!-- Título -->
                <TextBlock Text="Bienvenido"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Usuario -->
                <Border CornerRadius="15" Background="White" Margin="0,5,0,5">
                    <TextBox x:Name="TxtUsuario"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"
                             Height="48"/>
                </Border>

                <!-- Contraseña -->
                <Border CornerRadius="15" Background="White" Margin="0,5,0,5">
                    <PasswordBox x:Name="TxtPassword"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"
                                 Height="47"/>
                </Border>

                <!-- Botón -->
                <Button Content="Iniciar Sesión"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="#FFD39E24"
                        BorderThickness="0"
                        Height="40"
                        Margin="0,20,0,10"
                        Click="BtnLogin_Click"/>

                <!-- Enlace -->
                <TextBlock Text="¿Se te olvidó la contraseña?"
                           Foreground="White"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
