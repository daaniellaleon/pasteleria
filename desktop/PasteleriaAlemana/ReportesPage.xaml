<Page x:Class="Pasteleria_Alemana.ReportesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Reportes"
      Background="#FAFAFA">

    <Page.Resources>
        <!-- 🔘 Botón moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="12" 
                                BorderThickness="0" 
                                Background="{TemplateBinding Background}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="Auto"/>
            <!-- filtros -->
            <RowDefinition Height="Auto"/>
            <!-- botón -->
            <RowDefinition Height="*"/>
            <!-- vista previa -->
        </Grid.RowDefinitions>

        <!-- 🔖 Título -->
        <TextBlock Grid.Row="0"
                   Text="Generar Reportes"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1E293B"
                   Margin="0,0,0,16"/>

        <!-- 🔎 Barra de filtros -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <!-- Tipo de Reporte -->
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Tipo de Reporte" Margin="0,0,0,4"/>
                <ComboBox x:Name="TipoReporteBox"
                          Width="180" Height="32"
                          SelectedIndex="0"/>
            </StackPanel>

            <!-- Fecha Inicio -->
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Fecha Inicio" Margin="0,0,0,4"/>
                <DatePicker x:Name="FechaInicioPicker"
                            Width="160" Height="32"/>
            </StackPanel>

            <!-- Fecha Fin -->
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Fecha Fin" Margin="0,0,0,4"/>
                <DatePicker x:Name="FechaFinPicker"
                            Width="160" Height="32"/>
            </StackPanel>

            <!-- Formato -->
            <StackPanel Margin="0,0,12,0">
                <TextBlock Text="Formato" Margin="0,0,0,4"/>
                <ComboBox x:Name="FormatoBox"
                          Width="140" Height="32">
                    <ComboBoxItem Content="PDF" IsSelected="True"/>
                    <ComboBoxItem Content="Excel"/>
                    <ComboBoxItem Content="CSV"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- 🔘 Botón Generar abajo -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button x:Name="BtnGenerarReporte"
                    Content="Generar Reporte"
                    Width="200"
                    Height="40"
                    Click="BtnGenerarReporte_Click"
                    Cursor="Hand"
                    Style="{StaticResource ModernButton}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2563EB" Offset="0"/>
                        <GradientStop Color="#1E3A8A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </StackPanel>

        <!-- 📋 Vista previa / estado -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="16"
                Padding="16">
            <TextBlock x:Name="ReporteStatus"
                       Text="Seleccione un rango de fechas y un formato para generar el reporte."
                       Foreground="Gray"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </Border>

    </Grid>
</Page>
